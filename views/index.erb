<div id="game">
  <div id="board-container">
    <div id="board">
      <div id="row">
        <div id="tile" class="<%= tile_status(session[:words][0], 0) unless session[:words].empty? %>"><%= session[:words][0][0] unless session[:words][0].nil? %></div>
