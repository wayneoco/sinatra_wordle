        <div id="tile" class="<%= tile_status(session[:words][0], 3) unless session[:words].empty? %>"><%= session[:words][0][3] unless session[:words][0].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][0], 4) unless session[:words].empty? %>"><%= session[:words][0][4] unless session[:words][0].nil? %></div>
      </div>
      <div id="row">
        <div id="tile" class="<%= tile_status(session[:words][1], 0) unless session[:words][1].nil? %>"><%= session[:words][1][0] unless session[:words][1].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][1], 1) unless session[:words][1].nil? %>"><%= session[:words][1][1] unless session[:words][1].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][1], 2) unless session[:words][1].nil? %>"><%= session[:words][1][2] unless session[:words][1].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][1], 3) unless session[:words][1].nil? %>"><%= session[:words][1][3] unless session[:words][1].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][1], 4) unless session[:words][1].nil? %>"><%= session[:words][1][4] unless session[:words][1].nil? %></div>
      </div>
      <div id="row">
        <div id="tile" class="<%= tile_status(session[:words][2], 0) unless session[:words][2].nil? %>"><%= session[:words][2][0] unless session[:words][2].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][2], 1) unless session[:words][2].nil? %>"><%= session[:words][2][1] unless session[:words][2].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][2], 2) unless session[:words][2].nil? %>"><%= session[:words][2][2] unless session[:words][2].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][2], 3) unless session[:words][2].nil? %>"><%= session[:words][2][3] unless session[:words][2].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][2], 4) unless session[:words][2].nil? %>"><%= session[:words][2][4] unless session[:words][2].nil? %></div>
      </div>
      <div id="row">
        <div id="tile" class="<%= tile_status(session[:words][3], 0) unless session[:words][3].nil? %>"><%= session[:words][3][0] unless session[:words][3].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][3], 1) unless session[:words][3].nil? %>"><%= session[:words][3][1] unless session[:words][3].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][3], 2) unless session[:words][3].nil? %>"><%= session[:words][3][2] unless session[:words][3].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][3], 3) unless session[:words][3].nil? %>"><%= session[:words][3][3] unless session[:words][3].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][3], 4) unless session[:words][3].nil? %>"><%= session[:words][3][4] unless session[:words][3].nil? %></div>
      </div>
      <div id="row">
        <div id="tile" class="<%= tile_status(session[:words][4], 0) unless session[:words][4].nil? %>"><%= session[:words][4][0] unless session[:words][4].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][4], 1) unless session[:words][4].nil? %>"><%= session[:words][4][1] unless session[:words][4].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][4], 2) unless session[:words][4].nil? %>"><%= session[:words][4][2] unless session[:words][4].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][4], 3) unless session[:words][4].nil? %>"><%= session[:words][4][3] unless session[:words][4].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][4], 4) unless session[:words][4].nil? %>"><%= session[:words][4][4] unless session[:words][4].nil? %></div>
      </div>
      <div id="row">
        <div id="tile" class="<%= tile_status(session[:words][5], 0) unless session[:words][5].nil? %>"><%= session[:words][5][0] unless session[:words][5].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][5], 1) unless session[:words][5].nil? %>"><%= session[:words][5][1] unless session[:words][5].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][5], 2) unless session[:words][5].nil? %>"><%= session[:words][5][2] unless session[:words][5].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][5], 3) unless session[:words][5].nil? %>"><%= session[:words][5][3] unless session[:words][5].nil? %></div>
        <div id="tile" class="<%= tile_status(session[:words][5], 4) unless session[:words][5].nil? %>"><%= session[:words][5][4] unless session[:words][5].nil? %></div>
      </div>
    </div>
  </div>
  <div id="user-input">
  <% unless session[:winner_message] || session[:loser_message] %>
    <div id="word-input">
      <form name="current_word" action="/" method="post">
        <dl>
          <dt>
            <input name="current_word" type="text" placeholder="Enter a 5-letter word...">
          </dt>
          <dt>
            <button type="submit">Guess!</button>
          </dt>
        </dl>
      </form>
    </div>
  <% end %>
  <% if play_again? %>
    <div id="play-again">
      <form name="play_again" action="/play-again" method="post">
        <dl>
          <dt>
            <button type="submit">Play Again</button>
          </dt>
        </dl>
      </form>
    </div>
  <% end %>
  <% if session[:no_more_words_message] %>
    <div id="reset">
      <form name="reset" action="/reset" method="post">
        <dl>
          <dt>
            <button type="submit">Reset Game Data</button>
          </dt>
        </dl>
      </form>
    </div>
  <% end %>
  </div>
</div>


